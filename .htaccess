# .htaccess para ocultar la extensión .html
# Requiere mod_rewrite habilitado en Apache

<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Canonical: redirige /archivo.html -> /archivo (301)
  RewriteCond %{THE_REQUEST} \s/([^\s]+?)\.html[\s?] [NC]
  RewriteRule ^ /%1 [R=301,L]

  # 2) Internally servir archivos .html cuando se solicita sin extensión
  #    Si no es un directorio y existe un archivo .html correspondiente, rewritear.
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME}\.html -f
  RewriteRule ^(.*?)/?$ $1.html [L]
</IfModule>

# Denegar acceso a archivos ocultos (como .git, .env, etc.)
<FilesMatch "^\.">
  Require all denied
</FilesMatch>
